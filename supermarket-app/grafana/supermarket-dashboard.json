{
  "dashboard": {
    "id": null,
    "uid": null,
    "title": "Supermarket System Overview",
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 0,
    "panels": [
      {
        "type": "graph",
        "title": "Request Rate (req/s)",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          { "expr": "sum(rate(bff_requests_total[5m]))", "refId": "A" },
          { "expr": "sum(rate(core_service_requests_total[5m]))", "refId": "B" }
        ]
      },
      {
        "type": "graph",
        "title": "P95 Latency (ms)",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          { "expr": "histogram_quantile(0.95, rate(bff_request_duration_seconds_bucket[5m])) * 1000", "refId": "A" }
        ]
      },
      {
        "type": "singlestat",
        "title": "Total Orders (count)",
        "gridPos": { "x": 0, "y": 8, "w": 6, "h": 4 },
        "targets": [ { "expr": "sum(orders_created_total)", "refId": "A" } ]
      },
      {
        "type": "singlestat",
        "title": "Services Up",
        "gridPos": { "x": 6, "y": 8, "w": 6, "h": 4 },
        "targets": [ { "expr": "up", "refId": "A" } ]
      }
    ]
  },
  "overwrite": true
}
